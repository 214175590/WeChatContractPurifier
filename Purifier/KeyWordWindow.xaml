<Window x:Class="Purifier.KeyWordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Purifier"
        mc:Ignorable="d"
        Title="设置消息关键词" Height="450" Width="294" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <TextBlock Text="每行设置一个关键词："  Margin="3" Padding="3"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"/>
        </DockPanel>        
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="取消" Width="50" Margin="3" Padding="3" Click="Bt_Cancel_Click"/>
            <Button Content="保存" Width="50" Margin="3" Padding="3" Click="Bt_Save_Click"/>
        </StackPanel>
        <TextBox x:Name="tb_Keys" TextWrapping="Wrap" AcceptsReturn="True" Margin="3" Padding="3"/>
    </DockPanel>
</Window>
